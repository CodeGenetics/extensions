<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppDialog" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:colorBackground">@android:color/transparent</item>
    </style>


    <style name="AppTextView" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/euclidcirculara_regular</item>
    </style>

    <style name="AppTextView.Light" parent="AppTextView">
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:fontFamily">@font/euclidcirculara_light</item>
    </style>

    <style name="AppTextView.Regular" parent="AppTextView">
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:fontFamily">@font/euclidcirculara_regular</item>
    </style>

    <style name="AppTextView.Medium" parent="AppTextView">
        <item name="android:textSize">@dimen/_18sdp</item>
        <item name="android:fontFamily">@font/euclidcirculara_medium</item>
    </style>

    <style name="AppTextView.SemiBold" parent="AppTextView">
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:fontFamily">@font/euclidcirculara_medium</item>
    </style>

    <style name="AppTextView.Bold" parent="AppTextView">
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:fontFamily">@font/euclidcirculara_semibold</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="AppButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/euclidcirculara_medium</item>
        <item name="android:background">@drawable/primary_bg</item>
        <item name="backgroundTint">@null</item>
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:textAllCaps">false</item>


    </style>
</resources>