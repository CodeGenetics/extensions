<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppDialog" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:colorBackground">@android:color/transparent</item>
    </style>


    <style name="AppTextView" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/euclidcirculara_regular</item>
    </style>

    <style name="AppTextView.Light" parent="AppTextView">
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:fontFamily">@font/euclidcirculara_light</item>
    </style>

    <style name="AppTextView.Regular" parent="AppTextView">
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:fontFamily">@font/euclidcirculara_regular</item>
    </style>

    <style name="AppTextView.Medium" parent="AppTextView">
        <item name="android:textSize">@dimen/_18sdp</item>
        <item name="android:fontFamily">@font/euclidcirculara_medium</item>
    </style>

    <style name="AppTextView.SemiBold" parent="AppTextView">
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:fontFamily">@font/euclidcirculara_medium</item>
    </style>

    <style name="AppTextView.Bold" parent="AppTextView">
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:fontFamily">@font/euclidcirculara_semibold</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="AppButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/euclidcirculara_medium</item>
        <item name="android:background">@drawable/primary_bg</item>
        <item name="backgroundTint">@null</item>
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:textAllCaps">false</item>


    </style>


    <style name="ThemeDialog" parent="android:Theme.Holo.Dialog">
        <item name="android:windowMinWidthMajor">88%</item>
        <item name="android:windowMinWidthMinor">88%</item>

        <!-- Used for the buttons -->
        <!--        <item name="colorPrimary">@color/colorPrimaryDark</item>
                <item name="colorAccent">@color/colorPrimaryDark</item>
                <item name="android:colorAccent">@color/colorPrimaryDark</item>
                <item name="android:colorPrimary">@color/colorPrimaryDark</item>-->
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@android:color/white</item>

        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>

        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>

        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/NegativeButtonStyle</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/NegativeButtonStyle</item>

        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/MyAnimation.Window</item>

        <item name="android:statusBarColor">@android:color/transparent</item>

    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@android:color/black</item>
    </style>


    <style name="MyAnimation.Window" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/zoom_in_dialog</item>
        <item name="android:windowExitAnimation">@anim/zoom_out_dialog</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>

        <item name="android:statusBarColor">@android:color/transparent</item>

    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bottom_sheets</item>
    </style>

</resources>